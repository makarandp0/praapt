# Server
PORT=3000
NODE_ENV=development

# Database (Docker compose uses port 5433 and database praaptdb)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/praaptdb?sslmode=disable

# Firebase Authentication (optional - leave empty to disable auth)
# Base64-encoded Firebase service account JSON
FIREBASE_SERVICE_ACCOUNT_BASE64=
# Firebase Web API Key (from Firebase Console > Project Settings > General)
FIREBASE_CLIENT_API_KEY=
# Firebase Web App ID (from Firebase Console > Project Settings > General)
FIREBASE_CLIENT_APP_ID=
# Firebase Auth Domain (optional - defaults to {projectId}.firebaseapp.com)
FIREBASE_AUTH_DOMAIN=

