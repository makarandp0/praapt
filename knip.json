{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["scripts/**/*.mjs"],
      "project": ["scripts/**/*.mjs"]
    },
    "apps/api": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts", "!src/db.ts"]
    },
    "apps/web": {
      "entry": ["src/main.tsx", "vite.config.ts"],
      "project": ["src/**/*.{ts,tsx}", "!src/components/ui/**", "!src/lib/utils.ts"]
    },
    "packages/shared": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": ["**/*.d.ts", "**/dist/**", "**/node_modules/**"],
  "ignoreDependencies": [
    "dotenv",
    "knex",
    "pg",
    "@radix-ui/react-slot",
    "class-variance-authority",
    "lucide-react",
    "react-router-dom",
    "clsx",
    "tailwind-merge"
  ],
  "ignoreExportsUsedInFile": true
}
