{
  "name": "praapt",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "22.18.0",
    "npm": ">=10.9.0"
  },
  "volta": {
    "node": "22.18.0",
    "npm": "10.9.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "npm --workspace=@praapt/web run dev",
    "dev:all": "node scripts/dev-all.mjs",
    "build": "turbo run build",
    "start": "npm --workspace=@praapt/api run start",
    "migrate": "npm --workspace=@praapt/api run migrate",
    "rollback": "npm --workspace=@praapt/api run rollback",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "knip": "knip",
    "knip:watch": "knip --watch",
    "verify": "node scripts/verify.mjs",
    "verify:build": "node scripts/verify-build.mjs",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:build": "GIT_COMMIT=$(git rev-parse HEAD) docker compose build",
    "docker:restart": "docker compose restart",
    "prod:build": "turbo run build",
    "prod:start": "NODE_ENV=production npm --workspace=@praapt/api run start",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "knip": "^5.71.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "turbo": "^2.6.3"
  },
  "packageManager": "npm@10.9.0"
}
