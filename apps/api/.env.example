# Server
PORT=3000
NODE_ENV=development

# Git commit SHA for health endpoint (auto-set in CI/CD)
# GIT_COMMIT=abc123
# RAILWAY_GIT_COMMIT_SHA=abc123

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/praaptdb?sslmode=disable

# Images
# Optional: directory to store named images (defaults to ./images under API cwd)
# IMAGES_DIR=./images

# Face service (Python FastAPI)
# Default is http://localhost:8001 for local dev. If API also runs in Docker Compose,
# set this to http://face:8000 to use the compose network DNS name (internal port).
FACE_SERVICE_URL=http://localhost:8001

# CORS
# Optional: allowed origin for CORS (defaults to '*')
# CORS_ORIGIN=http://localhost:5173

# Static files (production only)
# Optional: path to static frontend files (defaults to ../../web/dist relative to src)
# STATIC_PATH=./web/dist

# Logging
# Optional: log level (defaults to 'debug' in development, 'info' in production)
# LOG_LEVEL=debug
