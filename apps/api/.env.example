# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/praaptdb?sslmode=disable

# Images
# Optional: directory to store named images (defaults to ./images under API cwd)
IMAGES_DIR=

# Face service (Python FastAPI)
# Default is http://localhost:8001 for local dev. If API also runs in Docker Compose,
# set this to http://face:8000 to use the compose network DNS name (internal port).
FACE_SERVICE_URL=http://localhost:8001
