{
  "name": "praapt",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": "22.18.0"
  },
  "volta": {
    "node": "22.18.0"
  },
  "scripts": {
    "dev": "node scripts/dev-all.mjs",
    "dev:all": "node scripts/dev-all.mjs",
    "dev:api": "pnpm --filter @praapt/api dev",
    "dev:web": "pnpm --filter @praapt/web dev",
    "build": "turbo run build",
    "start": "NODE_ENV=production pnpm --filter @praapt/api run start",
    "migrate": "pnpm --filter @praapt/api run migrate",
    "rollback": "pnpm --filter @praapt/api run rollback",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "knip": "knip",
    "knip:watch": "knip --watch",
    "check": "pnpm build && pnpm typecheck && pnpm lint && pnpm test",
    "verify": "node scripts/verify.mjs",
    "verify:build": "node scripts/verify-build.mjs",
    "ci": "turbo run build test lint typecheck && pnpm verify:build && pnpm verify",
    "docker:up": "GIT_COMMIT=$(git rev-parse HEAD) docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "prepare": "husky || true"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "knip": "^5.71.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "turbo": "^2.6.3",
    "typescript-eslint": "^8.8.1"
  }
}
