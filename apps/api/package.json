{
  "name": "@praapt/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "migrate": "tsx src/migrate.ts",
    "migrate:create": "node-pg-migrate create --migration-file-language ts --migrations-dir migrations",
    "migrate:up": "node-pg-migrate up --migrations-dir migrations --tsconfig tsconfig.json",
    "migrate:down": "node-pg-migrate down --migrations-dir migrations --tsconfig tsconfig.json",
    "rollback": "node-pg-migrate down --migrations-dir migrations --tsconfig tsconfig.json",
    "db:studio": "drizzle-kit studio",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@praapt/shared": "workspace:*",
    "zod": "^4.0.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.0",
    "express": "^4.19.2",
    "firebase-admin": "^13.0.0",
    "node-pg-migrate": "^7.9.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.7",
    "tsx": "^4.17.0"
  },
  "devDependencies": {
    "@praapt/tsconfig": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/pino": "^7.0.4",
    "@vitest/coverage-v8": "^4.0.15",
    "drizzle-kit": "^0.30.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.15"
  }
}
